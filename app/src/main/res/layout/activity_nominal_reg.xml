<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bck"
    tools:context=".NominalReg" >

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content" >

          <TextView
              android:id="@+id/msg"
              android:layout_centerHorizontal="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hint="Enter details"
              android:textSize="20dp"
              android:textColorHint="@android:color/white"
			/>
          
          <EditText
              android:id="@+id/ids"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_alignParentTop="true"
              android:layout_below="@id/msg"
              android:layout_marginTop="25dp"
              android:editable="false"
              android:ems="5"
              android:hint="Enter ID"
              android:textColorHint="@android:color/white" />
          
          <EditText
              android:id="@+id/name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/ids"
              android:layout_marginTop="20dp"
              android:ems="5"
              android:hint="Enter Name"
              android:textColorHint="@android:color/white" >

          		<requestFocus />
          </EditText>
          
          <EditText
              android:id="@+id/address"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@id/name"
              android:layout_below="@id/name"
              android:layout_marginTop="20dp"
              android:ems="5"
              android:hint="Enter Address"
              android:textColorHint="@android:color/white" />

          <EditText
              android:id="@+id/city"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@id/address"
              android:layout_alignRight="@+id/address"
              android:layout_below="@id/address"
              android:layout_marginTop="20dp"
              android:ems="10"
              android:hint="Enter City"
              android:textColorHint="@android:color/white" />

          <EditText
              android:id="@+id/state"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColorHint="@android:color/white"
              android:layout_alignLeft="@id/city"
              android:layout_below="@id/city"
              android:layout_marginTop="20dp"
              android:hint="Enter State"
              android:ems="10" />

          <EditText
              android:id="@+id/Country"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@id/state"
              android:layout_below="@id/state"
              android:textColorHint="@android:color/white"
              android:layout_marginTop="20dp"
              android:hint="Enter Country"
              android:ems="10" />
                    
             <EditText
              android:id="@+id/crime"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColorHint="@android:color/white"
              android:layout_alignLeft="@id/address"
              android:layout_below="@id/Country"
              android:layout_marginTop="20dp"
              android:hint="Enter Crime"
              android:ems="10" />
             
             <EditText
              android:id="@+id/crimelocation"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@id/address"
              android:layout_below="@id/crime"
              android:layout_marginTop="20dp"
              android:hint="Enter Crime Location"
              android:textColorHint="@android:color/white"
              android:ems="10" />
             
             <EditText
              android:id="@+id/crimecharges"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@id/address"
              android:layout_below="@id/crimelocation"
              android:layout_marginTop="20dp"
              android:hint="Enter Crime Charges Applied"
              android:textColorHint="@android:color/white"
              android:ems="10" />
          
             <EditText
              android:id="@+id/judge"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@id/address"
              android:layout_below="@id/crimecharges"
              android:layout_marginTop="20dp"
              android:hint="Enter Judge Name"
              android:textColorHint="@android:color/white"
              android:ems="10" />
             
             <EditText
              android:id="@+id/advocate"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@id/address"
              android:layout_below="@id/judge"
              android:layout_marginTop="20dp"
              android:hint="Enter Advocate Name"
              android:textColorHint="@android:color/white"
              android:ems="10" />
             
            <EditText
              android:id="@+id/articlesno"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@id/address"
              android:layout_below="@id/advocate"
              android:layout_marginTop="20dp"
              android:textColorHint="@android:color/white"
              android:hint="Enter No. of Articles"
              android:ems="10" />
             
            <EditText
              android:id="@+id/articles"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@id/address"
              android:layout_below="@id/articlesno"
              android:layout_marginTop="20dp"
              android:hint="Enter Articles"
              android:textColorHint="@android:color/white"
              android:ems="10" />
           
             
              
               <ImageButton
                   android:id="@+id/ok"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentBottom="true"
                   android:layout_toLeftOf="@+id/msg"
                   android:background="@drawable/submit"
                   android:layout_below="@id/articles"
                   android:layout_marginLeft="5dp"
                   android:textColorHint="@android:color/white" />

               <ImageButton
                   android:id="@+id/center"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignTop="@+id/name"
                   android:layout_alignBottom="@id/city"
                   android:layout_marginTop="11dp"
                   android:layout_toRightOf="@+id/msg"
                   android:src="@drawable/center" />

               <ImageButton
                   android:id="@+id/reset"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/articles"
                   android:layout_toRightOf="@id/ok"
                   android:layout_marginLeft="50dp"
                   android:background="@drawable/reset"
                   android:textColorHint="@android:color/white" />

      </RelativeLayout>
      
  </ScrollView>
 
</RelativeLayout>
